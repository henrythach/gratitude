<span class="entry-form__prompt">Today, I am thankful for...</span>
<aside class="entry-form">
  <%= form_with model: entry, local: true, class: 'flex flex-direction-column' do |form| %>
    <%= form.text_field :title,
                        placeholder: 'Title (required)',
                        class: 'entry-form__title-input' %>

    <%= form.text_area :body,
                       placeholder: 'More description (optional)',
                       class: 'entry-form__body-input' %>

    <%= form.hidden_field :user_id %>

    <%= form.submit 'Create',
                    class: 'entry-form__submit-input' %>
  <% end %>
</aside>
